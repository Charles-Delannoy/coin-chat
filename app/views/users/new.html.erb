<h1>Login</h1>

<div class="form-container">
  <%= form_with model: @user, url: login_path, local: true do |f| %>
    <%= f.text_field :nickname, placeholder: 'Nickname' %>
    <%= errors_display(@user, :nickname) %>
    <%= f.select :status, ['Available', 'Busy', 'Away'], prompt: 'Select a status' %>
    <%= errors_display(@user, :status) %>
    <%= f.submit 'Start chatting', class:'form-btn'%>
  <% end %>
</div>
<p class='login-or'>Or</p>
<div class="form-container">
  <p>Let the application choose your nickname and set your status as available</p>
  <%= form_with model: @user, url: login_path, local: true do |f| %>
    <%= f.hidden_field :shuffle, value: 'true' %>
    <%= f.submit 'Quick start', class:'form-btn'%>
  <% end %>
</div>
