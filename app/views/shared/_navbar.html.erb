<div class="navbar">
  <% if @current_user %>
    <div class='user-infos'>
      <p>Welcome <%= @current_user.nickname %></p>
      <%= react_component("StatusForm", { user: @current_user }) %>
    </div>
    <%= link_to 'Logout', logout_path, method: :delete %>
  <% end %>
  <div class='app-title'>
    <%= link_to '<i class="fas fa-home"></i>'.html_safe, root_path %>
    <h2>CoinChat</h2>
  </div>
</div>
